<%= image_tag "felt.jpg", class: "background" %>
<% if !@game.started %>
  <div class="pregame">
    <button id="add-ai-player" value="Add AI Player" data-behavior="room_speaker" class="btn">Add AI Player</button>
    <button id="join" value="Join" data-behavior="room_speaker" class="btn">Join</button>

  </div>
<% end %>

<div class="players">
  <h4>Players:</h4>
  <div id="players">
    <%= render @players if @players %>
  </div>
  <div id="cards">
    <%= render @cards if @cards %>
  </div>
</div>


<div class="history">
  <h1>Table</h1>
  <form>
    <label>Say something:</label><br>
    <input name="chat" id="chat" type="text" data-behavior="room_speaker">
  </form>

  <div id="messages">
    <%= render @messages.reverse %>
  </div>
</div>

<div><%= button_to "Pocket", card_path(user_id: current_user.id), method: :get, id: :pocket_cards, remote: true %></div>

<form class="bet-form">
  <label class="current-bet">How much would you like to Bet</label><br>
  <input type="text" data-behavior="room_speaker" class="current-bet" id="bet-amount"><br>
  <input type="submit" data-behavior="room_speaker" value="Bet" class="current-bet" id="current-bet"><br>
</form>

<div class="game-actions">
  <div class="check">
    <button  data-behavior="room_speaker" value="Check" id="check" class="action">Check</button>
  </div>

  <div class="bet">
    <button  value="Bet / Raise" id="bet" class="action">Bet</button>
  </div>

  <div class="fold">
    <button data-behavior="room_speaker" value="Fold" id="fold" class="action">Fold</button>
  </div>
</div>
