<%= image_tag "felt.jpg", class: "background" %>
<% if !@game.started %>
  <div class="pregame">
    <form>
      <div class="blind-dropdown">
        <button class="btn">Little Blind</button>
        <div class="blind-content little-blind" id="little">
          <a href="#">10</a>
          <a href="#">20</a>
          <a href="#">30</a>
          <a href="#">40</a>
          <a href="#">50</a>
          <a href="#">75</a>
          <a href="#">100</a>
          <a href="#">200</a>
        </div>
      </div>

      <div class="blind-dropdown">
        <button class="btn">Big Blind</button>
        <div class="blind-content big-blind" id="big">
          <a href="#">20</a>
          <a href="#">40</a>
          <a href="#">60</a>
          <a href="#">80</a>
          <a href="#">100</a>
          <a href="#">150</a>
          <a href="#">200</a>
          <a href="#">400</a>
        </div>
      </div>

      <input id="add-ai-player" type="submit" value="Add AI Player" data-behavior="room_speaker" class="btn">
      <input id="join" type="submit" value="Join" data-behavior="room_speaker" class="btn">
      <input id="begin-game" type="submit" value="Play Poker" data-behavior="room_speaker" class="btn">
    </form>
  </div>
<% end %>
<%= button_to "Pocket", card_path(user_id: current_user.id), method: :get, id: :pocket, remote: true %>

<div class="players">
  <h4>Players:</h4>
  <% display_players(@game).each do |player| %>
    <p><%= player.username %></p>
  <% end %>
  <div id="cards">
    <%= render @cards if @cards %>
  </div>
</div>


<div class="history">
  <h1>Table</h1>
  <form>
    <label>Say something:</label><br>
    <input name="chat" id="chat" type="text" data-behavior="room_speaker">
  </form>

  <div id="messages">
    <%= render @messages.reverse %>
  </div>
</div>

<form class="bet-form">
  <label class="current-bet">How much would you like to Bet</label><br>
  <input type="text" data-behavior="room_speaker" class="current-bet" id="bet-amount"><br>
  <input type="submit" data-behavior="room_speaker" value="Bet" class="current-bet" id="current-bet"><br>
</form>

<div class="game-actions">
  <div class="check">
    <form>
      <input type="submit" data-behavior="room_speaker" value="Check" id="check" class="action">
    </form>
  </div>

  <div class="bet">
    <form action="#">
      <input type="submit" value="Bet / Raise" id="bet" class="action">
    </form>
  </div>

  <div class="fold">
    <form>
      <input type="submit" data-behavior="room_speaker" value="Fold" id="fold" class="action">
    </form>
  </div>
</div>
